<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="550.0"
            prefWidth="730.0"
            style="-fx-background-color: #C5D5F3;"
            stylesheets="@mainStyle.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mehrin.loginpage.AnnouncementController">

    <!-- ================= LEFT SIDEBAR ================= -->
    <left>
        <VBox alignment="TOP_CENTER"
              prefWidth="137.0"
              spacing="4"
              style="-fx-background-color: #143F73;"
              styleClass="sidebar">

            <Button prefHeight="38" prefWidth="137"
                    styleClass="sidebar-button"
                    text="Home"
                    onAction="#handleHome"/>

            <Button prefHeight="38" prefWidth="137"
                    styleClass="sidebar-button"
                    text="Books"
                    onAction="#handleBooks"/>

            <Button prefHeight="38" prefWidth="137"
                    styleClass="sidebar-button"
                    text="Students"
                    onAction="#handleStudents"/>

            <Button prefHeight="38" prefWidth="137"
                    styleClass="sidebar-button"
                    text="Issue Book"
                    onAction="#handleIssueBook"/>

            <Button prefHeight="38" prefWidth="137"
                    styleClass="sidebar-button"
                    text="Return Book"
                    onAction="#handleReturnBook"/>

            <Button prefHeight="38" prefWidth="137"
                    styleClass="sidebar-button"
                    text="All Issued Books"
                    onAction="#handleAllIssuedBooks"/>

            <Button prefHeight="38" prefWidth="137"
                    styleClass="sidebar-button"
                    text="Announcement"
                    onAction="#handleAnnouncement"/>

            <Button prefHeight="38" prefWidth="137"
                    styleClass="sidebar-button"
                    text="Export"
                    onAction="#handleExport"/>

            <Button prefHeight="38" prefWidth="137"
                    styleClass="sidebar-button"
                    text="Clearance"
                    onAction="#handleClearance"/>

            <Button prefHeight="38" prefWidth="137"
                    styleClass="sidebar-button"
                    text="Logout"
                    onAction="#handleLogout"/>
        </VBox>
    </left>

    <!-- ================= MAIN CONTENT ================= -->
    <center>
        <HBox spacing="0" styleClass="main-content">

            <!-- ===== ANNOUNCEMENT FORM SECTION ===== -->
            <VBox spacing="20" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="30" left="30" right="15" top="30"/>
                </padding>

                <HBox alignment="CENTER_LEFT">
                    <Label styleClass="page-title"
                           text="Library Management System">
                        <font>
                            <Font size="18"/>
                        </font>
                    </Label>
                </HBox>

                <Label styleClass="section-title"
                       text="Announcement">
                    <font>
                        <Font name="System Bold" size="32"/>
                    </font>
                </Label>

                <VBox spacing="15">

                    <VBox spacing="8">
                        <Label text="Title"/>
                        <TextField fx:id="titleField"
                                   promptText="Enter announcement title"/>
                    </VBox>

                    <VBox spacing="8" VBox.vgrow="ALWAYS">
                        <Label text="Message"/>
                        <TextArea fx:id="announcementArea"
                                  promptText="Enter announcement message"
                                  wrapText="true"
                                  VBox.vgrow="ALWAYS"/>
                    </VBox>

                </VBox>

                <Region VBox.vgrow="ALWAYS"/>

                <HBox spacing="10">
                    <Button maxWidth="Infinity"
                            text="Clear"
                            onAction="#handleClear"
                            HBox.hgrow="ALWAYS"/>

                    <Button maxWidth="Infinity"
                            text="Post"
                            onAction="#handlePost"
                            HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>

            <!-- ===== ANNOUNCEMENT LIST PANEL ===== -->
            <VBox prefWidth="350"
                  spacing="20"
                  styleClass="info-panel">

                <padding>
                    <Insets bottom="30" left="30" right="30" top="30"/>
                </padding>

                <Label styleClass="panel-title"
                       text="Recent Announcements">
                    <font>
                        <Font name="System Bold" size="18"/>
                    </font>
                </Label>

                <ListView fx:id="announcementList"
                          VBox.vgrow="ALWAYS"/>
            </VBox>

        </HBox>
    </center>

    <!-- ================= TOP HEADER ================= -->
    <top>
        <HBox alignment="CENTER_LEFT"
              style="-fx-background-color: #0B2A4A; -fx-padding: 14 30;">
            <Label style="-fx-text-fill: white;
                          -fx-font-size: 18px;
                          -fx-font-weight: bold;"
                   text="Rajshahi University of Engineering &amp; Technology"/>
        </HBox>
    </top>

</BorderPane>
