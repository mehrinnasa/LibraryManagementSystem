<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="550.0" prefWidth="730.0" spacing="0" xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mehrin.loginpage.LoginController" alignment="TOP_CENTER">

    <!-- HEADER -->
    <HBox alignment="CENTER_LEFT" style="-fx-background-color: #0B2A4A; -fx-padding: 14 30;">
        <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"
               text="Rajshahi University of Engineering &amp; Technology" />
    </HBox>

    <!-- FULL PAGE BACKGROUND -->
    <StackPane style="-fx-background-color: #a9c1e1;" VBox.vgrow="ALWAYS" alignment="CENTER">

        <!-- LOGIN CARD -->
        <HBox alignment="CENTER" maxHeight="420" maxWidth="600" prefHeight="420" prefWidth="600"
              style="-fx-background-color: #e6e9ec; -fx-background-radius: 22;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 18, 0, 0, 8);">

            <!-- LEFT SIDE -->
            <VBox alignment="CENTER_LEFT" prefWidth="440" spacing="14" style="-fx-padding: 40;">
                <Label style="-fx-font-size: 28; -fx-font-weight: bold;" text="Log in" />

                <Label text="Username or Email" />
                <TextField fx:id="usernameField" prefHeight="38" promptText="Enter your username or email" />

                <Label text="Password" />
                <PasswordField fx:id="passwordField" prefHeight="38" promptText="Enter your password" />

                <Button fx:id="loggedInToMain" onAction="#handleLogin" prefHeight="40" prefWidth="220"
                        style="-fx-background-color: #214f38; -fx-text-fill: white;" text="Log In" />

                <Hyperlink fx:id="resetPassword" onAction="#changePass" text="Forgot Password?" />
            </VBox>

            <!-- RIGHT SIDE: IMAGE -->
            <VBox alignment="CENTER" prefWidth="160">
                <ImageView fx:id="imageView" fitWidth="140" preserveRatio="true">
                    <image>
                        <Image url="@RUET.png" />
                    </image>
                </ImageView>
            </VBox>

        </HBox>
    </StackPane>
</VBox>
