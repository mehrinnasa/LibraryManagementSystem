<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="550.0" prefWidth="730.0" spacing="0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mehrin.loginpage.LoginController">

    <!-- HEADER -->
    <HBox alignment="CENTER_LEFT" style="-fx-background-color: #0B2A4A; -fx-padding: 14 30;">
        <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Rajshahi University of Engineering &amp; Technology" />
    </HBox>

    <!-- FULL PAGE BACKGROUND -->
    <StackPane alignment="CENTER" VBox.vgrow="ALWAYS">

        <!-- LOGIN CARD -->
        <HBox alignment="CENTER" maxHeight="420" maxWidth="600" prefHeight="420" prefWidth="600" style="-fx-background-color: #e6e9ec; -fx-background-radius: 22;-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 18, 0, 0, 8);">

            <!-- LEFT SIDE -->
            <VBox alignment="CENTER_LEFT" prefHeight="420.0" prefWidth="368.0" spacing="14" style="-fx-padding: 40;">
                <Label style="-fx-font-size: 28; -fx-font-weight: bold;" text="Log in" />

                <Label text="Username or Email" />
                <TextField fx:id="usernameField" prefHeight="38" promptText="Enter your username or email" />

                <Label text="Password" />
                <PasswordField fx:id="passwordField" prefHeight="38" promptText="Enter your password" />

                <Button fx:id="loggedInToMain" onAction="#handleLogin" prefHeight="40" prefWidth="145.0" style="-fx-background-color: #214f38; -fx-text-fill: white;" text="Log In" />

                <Hyperlink fx:id="resetPassword" onAction="#changePass" text="Forgot Password?" />
            </VBox>

            <!-- RIGHT SIDE: IMAGE -->
            <VBox alignment="CENTER" prefHeight="420.0" prefWidth="193.0">
                <ImageView fx:id="imageView" fitWidth="140" preserveRatio="true">
                    <image>
                        <Image url="@RUET.png" />
                    </image>
                </ImageView>
            </VBox>

        </HBox>
    </StackPane>
</VBox>
