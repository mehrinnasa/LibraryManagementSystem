<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="550.0" prefWidth="730.0" spacing="0" stylesheets="@mainStyle.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mehrin.loginpage.MainController">

   <!-- ================= HEADER ================= -->
   <HBox alignment="CENTER_LEFT" style="-fx-background-color: #0B2A4A; -fx-padding: 14 30;">
      <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Rajshahi University of Engineering &amp; Technology" />
   </HBox>

   <!-- ================= BODY ================= -->
   <StackPane style="-fx-background-color: #C5D5F3;" VBox.vgrow="ALWAYS">

      <HBox>

         <!-- ========== SIDEBAR ========== -->
         <VBox alignment="TOP_CENTER" prefWidth="137.0" spacing="4" style="-fx-background-color: #143F73;" styleClass="sidebar">

            <Button fx:id="home" onAction="#loadHomePanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Home">
               <font><Font size="14" /></font>
            </Button>

            <Button fx:id="books" onAction="#loadBooksPanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Books">
               <font><Font size="14" /></font>
            </Button>

            <Button fx:id="students" onAction="#loadStudentPanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Students">
               <font><Font size="14" /></font>
            </Button>

            <Button fx:id="issuedBooks" onAction="#loadIssueBooksPanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Issue Book">
               <font><Font size="14" /></font>
            </Button>

            <Button fx:id="retunbooks" onAction="#loadReturnBooksPanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Return Book">
               <font><Font size="14" /></font>
            </Button>

            <Button fx:id="allIssuedBooks" onAction="#viewAllIssuedBooks" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="All Issued Books">
               <font><Font size="14" /></font>
            </Button>

            <Button fx:id="announcement" onAction="#loadSendAnnouncementsPanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Announcement">
               <font><Font size="14" /></font>
            </Button>

            <Button fx:id="export" onAction="#loadExportDataPanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Export">
               <font><Font size="14" /></font>
            </Button>

            <Button fx:id="clearance" onAction="#loadClearancePanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Clearance">
               <font><Font size="14" /></font>
            </Button>

            <Button fx:id="logout" onAction="#logout" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Logout">
               <font><Font size="14" /></font>
            </Button>

         </VBox>

         <!-- ========== CONTENT AREA ========== -->
         <BorderPane fx:id="contentPane" prefHeight="499.0" prefWidth="601.0" />

      </HBox>
   </StackPane>
</VBox>
