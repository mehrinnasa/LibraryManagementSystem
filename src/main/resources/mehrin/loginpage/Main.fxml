<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="550.0" prefWidth="730.0" spacing="0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mehrin.loginpage.MainController">

    <!-- HEADER -->
    <HBox alignment="CENTER_LEFT" style="-fx-background-color: #0B2A4A; -fx-padding: 14 30;">
        <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Rajshahi University of Engineering &amp; Technology" />
    </HBox>

    <!-- FULL PAGE BACKGROUND -->
    <StackPane alignment="CENTER_LEFT" style="-fx-background-color: #C5D5F3;" VBox.vgrow="ALWAYS">
      <children>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <VBox alignment="TOP_CENTER" prefHeight="499.0" prefWidth="137.0" spacing="4.0" style="-fx-background-color: #143F73;">
                  <children>
                     <Button fx:id="home" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#loadBooksPanel" prefHeight="38.0" prefWidth="135.0" style="-fx-background-color: #143F73;" text="Home" textFill="WHITE">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                     <Button fx:id="books" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#loadBooksPanel" prefHeight="38.0" prefWidth="135.0" style="-fx-background-color: #143F73;" text="Books" textFill="WHITE">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                     <Button fx:id="students" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#loadStudentPanel" prefHeight="38.0" prefWidth="140.0" style="-fx-background-color: #143F73;" text="Students" textFill="WHITE">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                     <Button fx:id="issuedBooks" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#loadIssueBooksPanel" prefHeight="38.0" prefWidth="137.0" style="-fx-background-color: #143F73;" text="Issue Book" textFill="WHITE">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                     <Button fx:id="retunbooks" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#loadReturnBooksPanel" prefHeight="38.0" prefWidth="137.0" style="-fx-background-color: #143F73;" text="Return Book" textFill="WHITE">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                     <Button fx:id="allIssuedBooks" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#viewAllIssuedBooks" prefHeight="38.0" prefWidth="137.0" style="-fx-background-color: #143F73;" text="All Issued Books" textFill="WHITE">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                     <Button fx:id="announcement" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#loadSendAnnouncementsPanel" prefHeight="38.0" prefWidth="137.0" style="-fx-background-color: #143F73;" text="Announcement" textFill="WHITE">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                     <Button fx:id="export" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#loadExportDataPanel" prefHeight="38.0" prefWidth="137.0" style="-fx-background-color: #143F73;" text="Export" textFill="WHITE">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                     <Button fx:id="clearance" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#loadClearancePanel" prefHeight="38.0" prefWidth="137.0" style="-fx-background-color: #143F73;" text="Clearance" textFill="WHITE">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                     <Button fx:id="logout" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#logout" prefHeight="38.0" prefWidth="137.0" style="-fx-background-color: #143F73;" text="Logout" textFill="WHITE">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                  </children>
               </VBox>
               <BorderPane prefHeight="499.0" prefWidth="598.0" />
            </children>
         </HBox>
      </children>
    </StackPane>
</VBox>
