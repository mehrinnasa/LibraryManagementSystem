<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="550.0" prefWidth="730.0" style="-fx-background-color: #C5D5F3;" stylesheets="@mainStyle.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mehrin.loginpage.BooksController">

    <!-- ================= LEFT SIDEBAR ================= -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="137.0" spacing="4" style="-fx-background-color: #143F73;" styleClass="sidebar">

            <Button fx:id="home" onAction="#loadHomePanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Home">
                <font><Font size="14" /></font>
            </Button>

            <Button fx:id="books" onAction="#loadBooksPanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Books">
                <font><Font size="14" /></font>
            </Button>

            <Button fx:id="students" onAction="#loadStudentPanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Students">
                <font><Font size="14" /></font>
            </Button>

            <Button fx:id="issuedBooks" onAction="#loadIssueBooksPanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Issue Book">
                <font><Font size="14" /></font>
            </Button>

            <Button fx:id="retunbooks" onAction="#loadReturnBooksPanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Return Book">
                <font><Font size="14" /></font>
            </Button>

            <Button fx:id="allIssuedBooks" onAction="#viewAllIssuedBooks" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="All Issued Books">
                <font><Font size="14" /></font>
            </Button>

            <Button fx:id="announcement" onAction="#loadSendAnnouncementsPanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Announcement">
                <font><Font size="14" /></font>
            </Button>

            <Button fx:id="export" onAction="#loadExportDataPanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Export">
                <font><Font size="14" /></font>
            </Button>

            <Button fx:id="clearance" onAction="#loadClearancePanel" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Clearance">
                <font><Font size="14" /></font>
            </Button>

            <Button fx:id="logout" onAction="#logout" prefHeight="38" prefWidth="137" styleClass="sidebar-button" text="Logout">
                <font><Font size="14" /></font>
            </Button>

        </VBox>
    </left>

    <!-- ================= MAIN CONTENT ================= -->
    <center>
        <HBox spacing="0" styleClass="main-content">

            <!-- ===== BOOKS TABLE SECTION ===== -->
            <VBox spacing="20" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="30" left="30" right="15" top="30" />
                </padding>

                <HBox alignment="CENTER_LEFT" />

                <Label styleClass="section-title" text="Books">
                    <font>
                        <Font name="System Bold" size="32" />
                    </font>
                </Label>

                <HBox alignment="CENTER_LEFT" spacing="15">
                    <TextField fx:id="searchField" prefWidth="300" promptText="Search book" styleClass="search-field" />

                    <Region HBox.hgrow="ALWAYS" />

                    <Button onAction="#handleDelete" styleClass="secondary-button" text="ðŸ—‘ Delete" />
                </HBox>

                <TableView fx:id="booksTable" styleClass="data-table" VBox.vgrow="ALWAYS">

                    <columns>
                        <TableColumn fx:id="bookIdColumn" text="Book ID" />
                        <TableColumn fx:id="titleColumn" text="Title" />
                        <TableColumn fx:id="authorColumn" text="Author" />
                        <TableColumn fx:id="statusColumn" text="Status" />
                    </columns>

                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <!-- ===== BOOK INFO PANEL ===== -->
            <VBox prefWidth="350" spacing="20" styleClass="info-panel">
                <padding>
                    <Insets bottom="30" left="30" right="30" top="30" />
                </padding>

                <Label styleClass="panel-title" text="Book information">
                    <font>
                        <Font name="System Bold" size="18" />
                    </font>
                </Label>

                <VBox spacing="15">
                    <VBox spacing="8">
                        <Label text="Book ID" />
                        <TextField fx:id="bookIdField" />
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Book title" />
                        <TextField fx:id="bookTitleField" />
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Author" />
                        <TextField fx:id="authorField" />
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Status" />
                        <ComboBox fx:id="statusComboBox" />
                    </VBox>
                </VBox>

                <Region VBox.vgrow="ALWAYS" />

                <HBox spacing="10">
                    <Button maxWidth="Infinity" onAction="#handleCancel" text="Cancel" HBox.hgrow="ALWAYS" />

                    <Button maxWidth="Infinity" onAction="#handleSave" text="Save" HBox.hgrow="ALWAYS" />
                </HBox>
            </VBox>

        </HBox>
    </center>
   <top>
       <HBox alignment="CENTER_LEFT" style="-fx-background-color: #0B2A4A; -fx-padding: 14 30;">
           <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Rajshahi University of Engineering &amp; Technology" />
       </HBox>    </top>

</BorderPane>
